@{
    ViewData["Title"] = "About Me";
}

<style>
    body {
        background: url('/images/Bham.jpg') no-repeat center center fixed;
        background-size: cover;
        height: 100%;
        overflow: scroll;
        background-color: transparent;
    }

    form {
        font-family: monospace;
    }

    input[type=text], input[type=submit] {
        width: 50%;
        padding: 12px;
        margin: 5px 0;
        display: inline-block;
    }

    input[type=checkbox] {
        margin-top: 12px;
    }

    input[type=submit] {
        background-color: green;
        color: white;
        border: 50px;
    }

        input[type=submit]:hover {
            opacity: 0.8;
        }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 80%;
    }

    h1 {
        font-size: larger;
        color: lightgray;
        font-family: monospace;
        text-align: center;
    }

    h2 {
        font-size: large;
        color: lightgray;
        font-family: monospace;
        text-align: center;
    }
    img {
        border-radius: 07%;
    }
</style>

<h1>Hi I'm Genesis!</h1>
<img style="width:500px;height:500px" src="/images/Aboutme.jpg" alt="GG Logo" class="center" />

<div style="justify-content: center;
        margin: auto;
        text-align: center;
        display: flex;
        align-items: center">
    <form class="center">
        <div>
            <h2>Interested in a free session?</h2>
            <h2>Hit me up!</h2>
            <input type="text" placeholder="Name" name="name" required>
            <input type="text" placeholder="Email" name="email" required>
            <input type="text" placeholder="Subject" name="subject" required>
            <input type="text" placeholder="Message" name="message" required>
        </div>
        <div>
            <input type="submit" value="Send">
        </div>
    </form>
</div>

